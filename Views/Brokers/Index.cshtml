@{
}

@model List<Broker>

<div class="container">
    <h1 class="mb-5">List of brokers in DB</h1>

    <div class="mb-3">
        @Html.ActionLink("Add broker", "AddBroker", "Brokers", null, new { @class = "btn btn-warning" })
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.FirstName @item.LastName</td>
                    <td>
                        @Html.ActionLink("Apartments", "BrokerApartments", "Brokers", new { id = $"{item.Id}" })
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>