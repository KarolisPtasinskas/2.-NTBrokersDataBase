@{
}

@model List<Broker>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink($"{@item.FirstName} {item.LastName}", "BrokerApartments", "Brokers", new { id = $"{item.Id}" })</td>
                    <td>Remove</td>
                </tr>
            }
        </tbody>
    </table>


</div>