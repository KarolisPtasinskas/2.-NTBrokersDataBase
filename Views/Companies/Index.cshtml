@{
}

@model List<CompanyModel>

<div class="container">
    <h1 class="mb-5">List of companies in DB</h1>



    <div class="mb-3">
        @Html.ActionLink("Add company", "AddCompany", "Companies", null, new { @class = "btn btn-warning" })
    </div>

    <table class="table">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Address</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.ActionLink($"{@item.CompanyName}", "BrokersInCompany", "Companies", new { id = $"{item.Id}" })</td>
                        <td>@item.Street g. @item.BuildingNo, @item.City</td>
                        <td>
                            @Html.ActionLink("Edit", "EditCompany", "Companies", new { id = $"{item.Id}" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>


</div>